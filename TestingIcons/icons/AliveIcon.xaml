<UserControl x:Class="TestingIcons.icons.AliveIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestingIcons.icons"
             xmlns:sysWin="clr-namespace:System.Windows;assembly=WindowsBase"
             mc:Ignorable="d" 
             Background="White"
             Height="22"
             Width="300">
    <UserControl.Resources>
        <sysWin:Point x:Key="topCenterPoint">11 1</sysWin:Point>
        <sysWin:Point x:Key="topRightPoint">18.07 3.929</sysWin:Point>
        <sysWin:Point x:Key="bottomCenterPoint">11 21</sysWin:Point>
        <sysWin:Point x:Key="bottomLeftPoint">3.929 18.07</sysWin:Point>
        <sysWin:Size x:Key="circleSize">10 10</sysWin:Size>
    </UserControl.Resources>
    <Canvas>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="iconStates">
                <VisualStateGroup.Transitions>
                    <VisualTransition To="Idle">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="line1">
                                <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Visible}"/>
                            </ObjectAnimationUsingKeyFrames>
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(Line.X1)" Storyboard.TargetName="line1">
                                <EasingDoubleKeyFrame KeyTime="0" Value="8"/>
                            </DoubleAnimationUsingKeyFrames>
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(Line.X2)" Storyboard.TargetName="line1">
                                <EasingDoubleKeyFrame KeyTime="0" Value="8"/>
                            </DoubleAnimationUsingKeyFrames>
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(Line.Y1)" Storyboard.TargetName="line1">
                                <EasingDoubleKeyFrame KeyTime="0" Value="6"/>
                            </DoubleAnimationUsingKeyFrames>
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(Line.Y2)" Storyboard.TargetName="line1">
                                <EasingDoubleKeyFrame KeyTime="0" Value="16"/>
                            </DoubleAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="line2">
                                <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Visible}"/>
                            </ObjectAnimationUsingKeyFrames>
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(Line.X1)" Storyboard.TargetName="line2">
                                <EasingDoubleKeyFrame KeyTime="0" Value="8"/>
                            </DoubleAnimationUsingKeyFrames>
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(Line.X2)" Storyboard.TargetName="line2">
                                <EasingDoubleKeyFrame KeyTime="0" Value="16"/>
                            </DoubleAnimationUsingKeyFrames>
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(Line.Y1)" Storyboard.TargetName="line2">
                                <EasingDoubleKeyFrame KeyTime="0" Value="6"/>
                            </DoubleAnimationUsingKeyFrames>
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(Line.Y2)" Storyboard.TargetName="line2">
                                <EasingDoubleKeyFrame KeyTime="0" Value="11"/>
                            </DoubleAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="line3">
                                <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Visible}"/>
                            </ObjectAnimationUsingKeyFrames>
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(Line.X1)" Storyboard.TargetName="line3">
                                <EasingDoubleKeyFrame KeyTime="0" Value="8"/>
                            </DoubleAnimationUsingKeyFrames>
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(Line.X2)" Storyboard.TargetName="line3">
                                <EasingDoubleKeyFrame KeyTime="0" Value="16"/>
                            </DoubleAnimationUsingKeyFrames>
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(Line.Y1)" Storyboard.TargetName="line3">
                                <EasingDoubleKeyFrame KeyTime="0" Value="16"/>
                            </DoubleAnimationUsingKeyFrames>
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(Line.Y2)" Storyboard.TargetName="line3">
                                <EasingDoubleKeyFrame KeyTime="0" Value="11"/>
                            </DoubleAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualTransition>
                    
                    <VisualTransition From="Idle" To="Processing">
                        <Storyboard>
                            <!-- Fade the outer ring out -->
                            <DoubleAnimation 
                                Storyboard.TargetName="outerPath"
                                Storyboard.TargetProperty="Opacity"
                                From="1" To="0" Duration="0:0:0.5"/>
                            <!--Reset the arc to a single point-->
                            <PointAnimationUsingKeyFrames
                                Storyboard.TargetName="startArc"
                                Storyboard.TargetProperty="StartPoint">
                                <!--Always grow the arc from its starting position-->
                                <DiscretePointKeyFrame KeyTime="0:0:0" Value="{StaticResource topCenterPoint}"/>
                            </PointAnimationUsingKeyFrames>
                            <!-- Grow the arc from a point -->
                            <PointAnimationUsingPath
                                Storyboard.TargetName="endArc"
                                Storyboard.TargetProperty="Point"
                                Duration="0:0:0.2"
                                AccelerationRatio="0.5">
                                <PointAnimationUsingPath.PathGeometry>
                                    <PathGeometry>
                                        <PathFigure StartPoint="{StaticResource topCenterPoint}" IsClosed="False">
                                            <ArcSegment
                                                Point="{StaticResource topRightPoint}"
                                                Size="{StaticResource circleSize}" 
                                                IsLargeArc="False"
                                                SweepDirection="Clockwise" />
                                        </PathFigure>
                                    </PathGeometry>
                                </PointAnimationUsingPath.PathGeometry>
                            </PointAnimationUsingPath>

                            <!--Spin the arc in a circle-->
                            <PointAnimationUsingPath 
                                Storyboard.TargetName="startArc"
                                Storyboard.TargetProperty="StartPoint"
                                Duration="0:0:0.8"
                                BeginTime="0:0:0.2"
                                AccelerationRatio="0.4"
                                >
                                <PointAnimationUsingPath.PathGeometry>
                                    <PathGeometry>
                                        <PathFigure StartPoint="{StaticResource topCenterPoint}">
                                            <ArcSegment Size="{StaticResource circleSize}" Point="{StaticResource bottomCenterPoint}"
                                                            SweepDirection="Clockwise" />
                                            <ArcSegment Size="{StaticResource circleSize}" Point="{StaticResource topCenterPoint}"
                                                            SweepDirection="Clockwise" />
                                        </PathFigure>
                                    </PathGeometry>
                                </PointAnimationUsingPath.PathGeometry>
                            </PointAnimationUsingPath>
    
                            <PointAnimationUsingPath 
                                    Storyboard.TargetName="endArc"
                                    Storyboard.TargetProperty="Point"
                                    Duration="0:0:0.8"
                                    BeginTime="0:0:0.2"
                                    AccelerationRatio="0.4"
                                    >
                                <PointAnimationUsingPath.PathGeometry>
                                    <PathGeometry>
                                        <PathFigure StartPoint="{StaticResource topRightPoint}">
                                            <ArcSegment Size="{StaticResource circleSize}" Point="{StaticResource bottomLeftPoint}"
                                                                SweepDirection="Clockwise" />
                                            <ArcSegment Size="{StaticResource circleSize}" Point="{StaticResource topRightPoint}"
                                                                SweepDirection="Clockwise" />
                                        </PathFigure>
                                    </PathGeometry>
                                </PointAnimationUsingPath.PathGeometry>
                            </PointAnimationUsingPath>

                            <!-- Spin the arc faster after a single rotation-->
                            <PointAnimationUsingPath 
                                Storyboard.TargetName="startArc"
                                Storyboard.TargetProperty="StartPoint"
                                Duration="0:0:0.4"
                                BeginTime="0:0:1.05"
                                RepeatBehavior="Forever">
                                <PointAnimationUsingPath.PathGeometry>
                                    <PathGeometry>
                                        <PathFigure StartPoint="{StaticResource topCenterPoint}">
                                            <ArcSegment Size="{StaticResource circleSize}" Point="{StaticResource bottomCenterPoint}"
                                                            SweepDirection="Clockwise" />
                                            <ArcSegment Size="{StaticResource circleSize}" Point="{StaticResource topCenterPoint}"
                                                            SweepDirection="Clockwise" />
                                        </PathFigure>
                                    </PathGeometry>
                                </PointAnimationUsingPath.PathGeometry>
                            </PointAnimationUsingPath>
                            <PointAnimationUsingPath 
                                    Storyboard.TargetName="endArc"
                                    Storyboard.TargetProperty="Point"
                                    Duration="0:0:0.4"
                                    BeginTime="0:0:1"
                                    RepeatBehavior="Forever">
                                <PointAnimationUsingPath.PathGeometry>
                                    <PathGeometry>
                                        <PathFigure StartPoint="{StaticResource topRightPoint}">
                                            <ArcSegment Size="{StaticResource circleSize}" Point="{StaticResource bottomLeftPoint}"
                                                                SweepDirection="Clockwise" />
                                            <ArcSegment Size="{StaticResource circleSize}" Point="{StaticResource topRightPoint}"
                                                                SweepDirection="Clockwise" />
                                        </PathFigure>
                                    </PathGeometry>
                                </PointAnimationUsingPath.PathGeometry>
                            </PointAnimationUsingPath>
                        </Storyboard>                        
                        
                    </VisualTransition>
                    
                    <VisualTransition From="Processing" To="Success">
                        <Storyboard>
                            <!--#region Fade out processing animation-->
                            <DoubleAnimation 
                                Storyboard.TargetName="outerPath"
                                Storyboard.TargetProperty="Opacity"
                                From="0" To="1" Duration="0:0:0.3"/>
                            <!--Reset start arc to starting position-->
                            <PointAnimationUsingKeyFrames
                                Storyboard.TargetName="startArc"
                                Storyboard.TargetProperty="StartPoint"
                                BeginTime="0:0:1.3"
                                >
                                <DiscretePointKeyFrame KeyTime="0:0:1.3" Value="{StaticResource topCenterPoint}"/>
                            </PointAnimationUsingKeyFrames>
            
                            <!--Reset end arc to starting position-->
                            <PointAnimationUsingKeyFrames
                                Storyboard.TargetName="endArc" 
                                Storyboard.TargetProperty="Point"
                                BeginTime="0:0:1.3"
                                >    
                                <DiscretePointKeyFrame KeyTime="0:0:1.3" Value="{StaticResource topCenterPoint}"/>
                            </PointAnimationUsingKeyFrames>
                            <!--#endregion-->
                            <!--#region Checkmark animation -->
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(Shape.StrokeThickness)" Storyboard.TargetName="line1">
                                <EasingDoubleKeyFrame KeyTime="0" Value="1.25"/>
                            </DoubleAnimationUsingKeyFrames>
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(Line.X1)" Storyboard.TargetName="line1">
                                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                                <EasingDoubleKeyFrame KeyTime="0:0:0.29" Value="0"/>
                                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="1"/>
                                <EasingDoubleKeyFrame KeyTime="0:0:0.6" Value="0"/>
                            </DoubleAnimationUsingKeyFrames>
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(Line.X2)" Storyboard.TargetName="line1">
                                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                                <EasingDoubleKeyFrame KeyTime="0:0:0.29" Value="3.5"/>
                            </DoubleAnimationUsingKeyFrames>
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(Line.Y1)" Storyboard.TargetName="line1">
                                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                                <EasingDoubleKeyFrame KeyTime="0:0:0.29" Value="0"/>
                                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="1"/>
                                <EasingDoubleKeyFrame KeyTime="0:0:0.6" Value="0"/>
                            </DoubleAnimationUsingKeyFrames>
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(Line.Y2)" Storyboard.TargetName="line1">
                                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                                <EasingDoubleKeyFrame KeyTime="0:0:0.29" Value="3.5"/>
                            </DoubleAnimationUsingKeyFrames>
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(Canvas.Left)" Storyboard.TargetName="line1">
                                <EasingDoubleKeyFrame KeyTime="0" Value="6.198"/>
                            </DoubleAnimationUsingKeyFrames>
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(Canvas.Top)" Storyboard.TargetName="line1">
                                <EasingDoubleKeyFrame KeyTime="0" Value="11.768"/>

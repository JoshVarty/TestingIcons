                                <EasingDoubleKeyFrame KeyTime="0:0:0.286" Value="1"/>
                                <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="1.5"/>
                            </DoubleAnimationUsingKeyFrames>
                            <!--#endregion-->
                        </Storyboard>
                    </VisualTransition>
                    <VisualTransition From="Processing" To="Warning">
                        
                    </VisualTransition>
                    
                </VisualStateGroup.Transitions>
                <VisualState x:Name="Idle">
                    
                </VisualState>
                <VisualState x:Name="Processing"></VisualState>
                <VisualState x:Name="Success"></VisualState>
                <VisualState x:Name="Warning"></VisualState>
                <VisualState x:Name="Error"></VisualState>
                <VisualState x:Name="Stop"></VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>


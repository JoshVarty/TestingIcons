<Window x:Class="TestingIcons.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestingIcons"
        mc:Ignorable="d"
        xmlns:PresentationOptions="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options" 
        
        Title="MainWindow" Height="430" Width="400">
    <Window.Resources>
        <Storyboard x:Key="SpinningAnimation">
            <ParallelTimeline>
                <PointAnimationUsingPath
                    Storyboard.TargetName="arc"
                    Storyboard.TargetProperty="Point"
                    Duration="0:0:0.2"
                    AccelerationRatio="0.5">
                    <PointAnimationUsingPath.PathGeometry>
                        <PathGeometry>
                            <PathFigure StartPoint="200 75" IsClosed="False">
                                <ArcSegment
                                    Point="288.38 111.61"
                                    Size="125 125" 
                                    IsLargeArc="False"
                                    SweepDirection="Clockwise" />
                            </PathFigure>
                        </PathGeometry>
                    </PointAnimationUsingPath.PathGeometry>
                </PointAnimationUsingPath>
            </ParallelTimeline>
        </Storyboard>
    </Window.Resources>
    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.MouseDown">
            <BeginStoryboard Storyboard="{StaticResource SpinningAnimation}"/>
        </EventTrigger>
    </Window.Triggers>
    <Canvas>
        <Path Stroke="Black" StrokeThickness="10" Visibility="Hidden">
            <Path.Data>
                <PathGeometry>
                    <PathFigure StartPoint="200 75" IsClosed="False">
                        <ArcSegment x:Name="arc"
                                    Point="288.38 111.61"
                                    Size="125 125" 
                                    IsLargeArc="False"
                                    SweepDirection="Clockwise" />

                    </PathFigure>
                </PathGeometry>
            </Path.Data>
        </Path>
        
        <Path x:Name="startPointPath" Stroke="Green" Visibility="Hidden" StrokeThickness="5">
            <Path.Data>
                <PathGeometry>
                    <PathFigure StartPoint="200 75">
                        <ArcSegment Size="125 125" Point="200 325"
                                                SweepDirection="Clockwise" />
                        <ArcSegment Size="125 125" Point="200 75"
                                                SweepDirection="Clockwise" />
                    </PathFigure>
                </PathGeometry>
            </Path.Data>
        </Path>

        <Path x:Name="endPointPath" Stroke="Black" StrokeThickness="5">
            <Path.Data>
                <PathGeometry>
                    <PathFigure StartPoint="288.38 111.61">
                        <ArcSegment Size="125 125" Point="111.61 288.39"
                                                SweepDirection="Clockwise" />
                        <ArcSegment Size="125 125" Point="288.38 111.61"
                                                SweepDirection="Clockwise" />
                    </PathFigure>
                </PathGeometry>
            </Path.Data>
        </Path>
    </Canvas>

</Window>

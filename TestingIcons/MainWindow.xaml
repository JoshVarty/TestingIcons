<Window x:Class="TestingIcons.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestingIcons"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400">
    <Window.Resources>
        <Storyboard x:Key="AnimateLine">
            <ParallelTimeline>
                <PointAnimationUsingPath
                            Storyboard.TargetName="arc"
                            Storyboard.TargetProperty="Point"
                            Duration="0:0:2">

                    <PointAnimationUsingPath.PathGeometry>
                        <PathGeometry>
                            <PathFigure StartPoint="350 175">
                                <ArcSegment Size="150 150" Point="50 175"
                                                SweepDirection="Counterclockwise" />
                                    <ArcSegment Size="150 150" Point="350 175"
                                                SweepDirection="Counterclockwise" />
                            </PathFigure>
                        </PathGeometry>
                    </PointAnimationUsingPath.PathGeometry>
                </PointAnimationUsingPath>
                <BooleanAnimationUsingKeyFrames Storyboard.TargetProperty="IsLargeArc" Storyboard.TargetName="arc">
                    <DiscreteBooleanKeyFrame KeyTime="0:0:1" Value="True"/>
                    <!-- At the half way point our loop is "large" ie. half closed-->
                    <DiscreteBooleanKeyFrame KeyTime="0:0:2" Value="False" />
                    <!-- At the start we have a "small" arc. It's mostly open. -->
                </BooleanAnimationUsingKeyFrames>
                
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="Width" Storyboard.TargetName="rectangle">
                <EasingDoubleKeyFrame KeyTime="0:0:0.0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="300"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.6" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(Canvas.Left)" Storyboard.TargetName="rectangle">
                <EasingDoubleKeyFrame KeyTime="0:0:0.0" Value="50"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="50"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.6" Value="350"/>
            </DoubleAnimationUsingKeyFrames>
            </ParallelTimeline>
        </Storyboard>
    </Window.Resources>
    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.MouseDown">
            <BeginStoryboard Storyboard="{StaticResource AnimateLine}"/>
        </EventTrigger>
    </Window.Triggers>

    <Canvas>
        <Path Stroke="Black" StrokeThickness="10">
            <Path.Data>
                <PathGeometry>
                    <PathFigure StartPoint="350 175" IsClosed="False">
                        <ArcSegment x:Name="arc"
                                    Point="50,175"
                                    Size="150 150" 
                                    IsLargeArc="False"
                                    SweepDirection="Counterclockwise" />
                        
                    </PathFigure>
                </PathGeometry>
            </Path.Data>
        </Path>
        <Rectangle x:Name="rectangle" Fill="Black" Height="15" Canvas.Left="50" Canvas.Top="167.5" Stroke="Black" Width="5" RenderTransformOrigin="0.5,0.5">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>


    </Canvas>
</Window>
